<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtWorkoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Workout ID"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edtNewWorkoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New Workout Name"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnEditWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Workout"/>

    <Button
        android:id="@+id/btnDeleteWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Workout"
        android:backgroundTint="@android:color/holo_red_light"/>

</LinearLayout>
