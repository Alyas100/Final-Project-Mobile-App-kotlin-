<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black"
    tools:context=".ui.activities.bottom_navigation.fragments.MoreFragmentPage"
    android:gravity="center_vertical"> <!-- To center the content vertically -->

    <!-- Title: More -->

    <!-- Catchy Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="More"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Below are 2 other functions that can ease your fitness and healthy life."
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp" />

    <!-- Reminders Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:cardCornerRadius="8dp"
        android:cardElevation="4dp"
        android:backgroundTint="@android:color/holo_green_light"> <!-- Using built-in green color -->

        <TextView
            android:id="@+id/reminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminders"
            android:drawableStart="@android:drawable/ic_lock_idle_alarm"
            android:drawablePadding="12dp"
            android:padding="16dp"
            android:textSize="20sp"  <!-- Increased font size -->
        android:textColor="@android:color/white"  <!-- White text color -->
        android:textStyle="bold"  <!-- Bold text style -->
        android:layout_gravity="center_vertical" /> <!-- Align the text vertically center -->

    </androidx.cardview.widget.CardView>

    <!-- History Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:cardCornerRadius="8dp"
        android:cardElevation="4dp"
        android:backgroundTint="@android:color/holo_green_light"> <!-- Using built-in green color -->

        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="12dp"
            android:padding="16dp"
            android:textSize="20sp"  <!-- Increased font size -->
        android:textColor="@android:color/white"  <!-- White text color -->
        android:textStyle="bold"  <!-- Bold text style -->
        android:layout_gravity="center_vertical" /> <!-- Align the text vertically center -->

    </androidx.cardview.widget.CardView>

</LinearLayout>
